#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the value of n:" << endl;
    cin >> n;
    int size = (n * (n + 1)) / 2;
    int a[size];
    cout << "Enter elements of lower triangular part (row major):" << endl;
    for (int i = 0; i < size; i++) {
        cin >> a[i];
    }
    cout << "\nThe Symmetric Matrix is:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i >= j) {
                cout << a[i*(i+1)/2 + j] << " ";
            } else {
                cout << a[j*(j+1)/2 + i] << " ";
            }
        }
        cout << "\n";
    }
    return 0;
}
